service cloud.firestore {
  match /databases/{database}/documents {
    // Guestbook: public reads, validated creates, admin-only update/delete
    match /guestbook/{docId} {
      allow read: if true;
      allow create: if request.resource.data.name is string
                    && request.resource.data.message is string
                    && request.resource.data.name.size() > 0
                    && request.resource.data.message.size() > 0
                    && !(request.resource.data.approved == true);
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // FAQ: public reads, validated creates, admin-only update/delete
    match /faq/{docId} {
      allow read: if true;
      allow create: if request.resource.data.q is string && request.resource.data.q.size() > 5 && !(request.resource.data.approved == true);
      allow update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Metrics: allow authenticated or limited client writes to visits counter
    match /metrics/visits {
      allow read: if true;
      // allow create/update from any client but limit field types
      allow write: if request.resource.data.count is number && request.resource.data.last is number;
    }

    // Deny by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
